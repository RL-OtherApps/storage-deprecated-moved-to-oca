<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="image_medium" position="replace">
                <field name="image_medium" invisible="True"/>
                <field name="image_medium_url" widget="image_url" class="oe_avatar"/>
            </field>
            <xpath expr="//page[@name='sales']" position="after">
                <page name="image" string="Image">
                    <div>
                   <button name="button_product2storage"
                            string="Mass link" type="object"
                            help="Massively add images by selected them in batch"
                            context="{'dest_model': 'storage.image', 'default_product_tmpl_id': active_id}"/>
                    </div>
                    <field name="image_ids" mode="tree" />
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_template_kanban_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="image_small" position="replace">
                <field name="image_small" invisible="True"/>
                <field name="image_small_url" widget="image_url" class="oe_avatar"/>
            </field>
            <xpath expr="//div[@class='o_kanban_image']/img" position="replace">
                <img t-att-src="record.image_small_url.value"/>
            </xpath>
        </field>
    </record>

    <record id="action_link_img2product" model="ir.actions.server">
        <field name="name">Link images to product ðŸ”—</field>
        <field name="state">code</field>
        <field name="context">{'default_product_tmpl_id': default_product_tmpl_id}</field>
        <field name="model_id" ref="storage_image.model_storage_image"/>
        <field name="code">
records._link2product()
        </field>
    </record>

    <record id="action_link_img2product_value" model="ir.values">
        <field name="model_id" ref="storage_image.model_storage_image" />
        <field name="name">Link images to product ðŸ”—</field>
        <field name="key2">client_action_multi</field>
        <field name="key">action</field>
        <field name="model">storage.image</field>
        <field name="value" eval="'ir.actions.server,' + str(ref('storage_image_product.action_link_img2product'))" />
    </record>

    <record id="action_link_img2product" model="ir.actions.server">
        <field name="menu_ir_values_id" ref="action_link_img2product_value"/>
    </record>

</odoo>
